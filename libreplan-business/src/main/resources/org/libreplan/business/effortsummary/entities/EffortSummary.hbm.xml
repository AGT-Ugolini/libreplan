<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field"
    package="org.libreplan.business.effortsummary.entities">

    <!-- EffortSummary -->
    <class name="EffortSummary" table="effort_summary">
        <id name="id" type="long" access="property">
            <generator class="hilo">
                <param name="max_lo">100</param>
            </generator>
        </id>
        <version name="version" access="property" type="long" />

        <property name="startDate" column="start_date" not-null="true"
                type="org.joda.time.contrib.hibernate.PersistentLocalDate"/>

        <property name="endDate" column="end_date" not-null="true"
                type="org.joda.time.contrib.hibernate.PersistentLocalDate" />

        <property name="availableEffort" column="available_effort" not-null="true"/>

        <property name="assignedEffort" column="assigned_effort"  not-null="true"/>

        <many-to-one name="resource" column="resource_id" not-null="true"
                class="org.libreplan.business.resources.entities.Resource" />
    </class>

</hibernate-mapping>
