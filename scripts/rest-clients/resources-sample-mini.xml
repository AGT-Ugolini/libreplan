        </criterion-satisfaction-list>
        <resources-cost-category-assignment-list>
            <resources-cost-category-assignment
                cost-category-name="TestCostCategory"
                start-date="2001-01-01"/>
            <resources-cost-category-assignment
                cost-category-name="TestCostCategory"
                start-date="2000-01-01"
                end-date="2000-04-01"/>
